# Django Settings
# SECURITY WARNING: Generate a new secret key for production!
# You can generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode - set to False in production
DEBUG=True

# Allowed hosts - comma separated (e.g., example.com,www.example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_NAME=pkpycms
DATABASE_USER=pkpycms_user
DATABASE_PASSWORD=your-database-password-here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Site Configuration
SITE_NAME=PK PY CMS
SITE_URL=http://localhost:8000

# Email Configuration (optional, for password reset, etc.)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Media & Static files
MEDIA_URL=/media/
STATIC_URL=/static/
